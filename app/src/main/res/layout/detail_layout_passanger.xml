<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="74dp"
            app:expandedTitleMarginStart="70dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/no_image_dark"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                app:layout_collapseMode="parallax"
                android:background="@drawable/tetri_foni"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/caller"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/tel"
                    android:scaleType="centerInside"
                    android:layout_width="64dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/anim_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/add_statement_inline_padding"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding"
                android:showDividers="middle">

                <ImageView
                    android:layout_width="@dimen/icon_size_in_detail_page"
                    android:layout_height="@dimen/icon_size_in_detail_page"
                    android:layout_marginLeft="@dimen/add_statement_inline_padding"
                    android:layout_marginRight="@dimen/add_statement_inline_padding"
                    android:scaleType="centerInside"
                    android:src="@drawable/pin" />

                <TextView
                    android:id="@+id/detiles_city_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/text_size_in_detail_page" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/add_statement_inline_padding"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding">

                <ImageView
                    android:layout_width="@dimen/icon_size_in_detail_page"
                    android:layout_height="@dimen/icon_size_in_detail_page"
                    android:layout_marginLeft="@dimen/add_statement_inline_padding"
                    android:layout_marginRight="@dimen/add_statement_inline_padding"
                    android:scaleType="centerInside"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/detiles_time_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/text_size_in_detail_page" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/add_statement_inline_padding"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding">

                <ImageView
                    android:layout_width="@dimen/icon_size_in_detail_page"
                    android:layout_height="@dimen/icon_size_in_detail_page"
                    android:layout_marginLeft="@dimen/add_statement_inline_padding"
                    android:layout_marginRight="@dimen/add_statement_inline_padding"
                    android:scaleType="centerInside"
                    android:src="@drawable/man_detail" />

                <TextView
                    android:id="@+id/detiles_freespace_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/text_size_in_detail_page" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/add_statement_inline_padding"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding">

                <ImageView
                    android:layout_width="@dimen/icon_size_in_detail_page"
                    android:layout_height="@dimen/icon_size_in_detail_page"
                    android:layout_marginLeft="@dimen/add_statement_inline_padding"
                    android:layout_marginRight="@dimen/add_statement_inline_padding"
                    android:scaleType="centerInside"
                    android:src="@drawable/lari2" />

                <TextView
                    android:id="@+id/detiles_price_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/text_size_in_detail_page" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/pirobebi_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cardViewMargin"
                    card_view:cardCornerRadius="@dimen/cardCorner">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/add_statement_inline_padding">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="6dp"
                            android:gravity="center"
                            android:text="პირობები" />

                        <RelativeLayout
                            android:id="@+id/comfort1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/driver_conditioner_checkBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="6dp"
                                android:enabled="false"
                                android:text="@string/ST_condicioner" />

                            <CheckBox
                                android:id="@+id/driver_atplace_checkBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_toRightOf="@+id/driver_conditioner_checkBox"
                                android:layout_toEndOf="@+id/driver_conditioner_checkBox"
                                android:enabled="false"
                                android:text="@string/ST_athome" />

                            <CheckBox
                                android:id="@+id/driver_cigar_checkBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/driver_conditioner_checkBox"
                                android:layout_marginBottom="6dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginStart="6dp"
                                android:enabled="false"
                                android:text="@string/ST_sigar" />

                            <CheckBox
                                android:id="@+id/driver_baggage_checkBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/driver_conditioner_checkBox"
                                android:layout_toEndOf="@+id/driver_cigar_checkBox"
                                android:layout_toRightOf="@id/driver_cigar_checkBox"
                                android:enabled="false"
                                android:text="@string/ST_baggage" />

                            <CheckBox
                                android:id="@+id/driver_animal_checkBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/driver_conditioner_checkBox"
                                android:layout_toEndOf="@+id/driver_baggage_checkBox"
                                android:layout_toRightOf="@id/driver_baggage_checkBox"
                                android:enabled="false"
                                android:text="@string/ST_animals" />

                        </RelativeLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/limit_detiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/add_statement_inline_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="შეზღუდვა მგზავრზე" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detiles_limit_age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="მაქს. ასაკი: " />

                    <TextView
                        android:id="@+id/detiles_limit_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="სქესი: " />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/commentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardViewMargin"
                card_view:cardCornerRadius="@dimen/cardCorner">

                <TextView
                    android:id="@+id/detiles_comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="comment" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>