<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_driver"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="@dimen/cardViewMargin"
        card_view:cardCornerRadius="@dimen/cardCorner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/list1_image"
                android:layout_width="@dimen/list_imig_width"
                android:layout_height="@dimen/list_imig_hiegth"
                android:layout_gravity="left"
                android:scaleType="centerCrop"
                android:src="@drawable/mgz" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/text_margin_in_list"
                android:paddingRight="@dimen/text_margin_in_list">


                <TextView
                    android:id="@+id/list1_city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right|top"
                    android:layout_marginBottom="4dp"
                    android:text="საიდან - სად"
                    android:textSize="@dimen/statement_list_title_size" />


                <TextView
                    android:id="@+id/list1_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/list1_city_text"
                    android:layout_alignStart="@+id/list1_city_text"
                    android:layout_below="@+id/list1_city_text"
                    android:layout_marginBottom="4dp"
                    android:text="სახელი გვარი" />



                <LinearLayout
                    android:id="@+id/list1_kacunebi"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/list1_name_text"
                    android:orientation="horizontal">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">


                    <TextView
                        android:id="@+id/list1_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="17.08.2015"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/date_color" />

                    <ImageView
                        android:id="@+id/image_lari"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/lari" />

                    <TextView
                        android:id="@+id/list1_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/image_lari"
                        android:text="10"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/date_color" />

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>